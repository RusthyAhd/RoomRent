rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow read/write access to all files
    // ⚠️ WARNING: These rules allow anyone to read and write to your storage
    // Use only for development and testing
    match /{allPaths=**} {
      allow read, write: if true;
    }
    
